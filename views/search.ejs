<div id="search">
    <form action="/giveResult" method="get" style="width: 50%; margin:auto"><br><br><br>
        <h2>Search Product</h2>
        <input class="form-control" name="code" id="code" type="text" placeholder="Product Code ">
        <br>
        <button style="background-color: aqua;" class="form-control" type="submit">Search in Database</button>
    </form>
</div>
<br>
<div>
    <%- include("partials/messages") -%>
</div>
<% if(!!product) {%>
    <div class="container mt-5 ">
        <strong>Search results:</strong>
        <table class="table table-bordered " width="100% " cellspacing="0 ">
            <thead>
                <tr>
                    <th> Code </th>
                    <th> Description </th>
                    <th> Price </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= product.code %>
                    </td>
                    <td>
                        <%= product.description %>
                    </td>
                    <td>
                        <%= product.price %> $
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <% } %>
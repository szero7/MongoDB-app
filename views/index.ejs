<div class="container mt-5">
    <table class="table  table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Code</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>

        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td>
                        <%= product.code %>
                    </td>
                    <td>
                        <%= product.description %>
                    </td>
                    <td>
                        <%= product.price %>
                    </td>
                </tr>
                <% }) %>
        </tbody>

    </table>
</div>